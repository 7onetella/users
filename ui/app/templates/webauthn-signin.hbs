<div class="container">
  <div id="logo"><img id="logo_img" src="/ui/assets/lock.png" class="rounded mx-auto d-block" alt="Lock"></div>
  <div id="signindiv" class="card">
    <article class="card-body">
      <h4 class="card-title text-center mb-4 mt-1">WebAuthn Authentication</h4>
      {{#if login_failed}}
        <h6 id="signinalertdiv" class="card-subtitle mb-2 text-danger">{{login_failure_reason}}</h6>
      {{/if}}
      <hr>
      <form>
        <div class="form-group">
          <button id="sigin_btn" type="button" {{action "authenticate" this.model}} class="btn btn-success btn-block">Sign In</button>
        </div>
      </form>
    </article>
  </div>
</div>