<div class="container">
  <div id="logo"></div>
  <div id="signindiv" class="card">
    <article class="card-body">
      <h4 class="card-title text-center mb-4 mt-1">Sign in</h4>
      {{#if loginFailed}}
        <h6 id="signinalertdiv" class="card-subtitle mb-2 text-danger">{{login_failure_reason}}</h6>
      {{/if}}
      <hr>
      <form {{action "authenticate" on="submit"}}>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"> <i class="fa fa-user"></i> </span>
            </div>
            {{input type="text" autocomplete="username" class="form-control" value=username id="username" placeholder="Username or email address" aria-label="Input group example" aria-describedby="btnGroupAddon"}}
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
            </div>
            {{input type="password" autocomplete="current-password" class="form-control" value=password id="password" placeholder="Password" aria-label="Input group example" aria-describedby="btnGroupAddon"}}
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
            </div>
            {{input type="text" class="form-control" value=totp id="totp" placeholder="TOTP" aria-label="Input group example" aria-describedby="btnGroupAddon"}}
          </div>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-block">Sign In</button>
        </div>
      </form>
    </article>
  </div>
</div>