<div class="container">
  <div id="logo"></div>
  <div id="signindiv" class="card">
    <article class="card-body">
      <form>
        <div class="form-group">
          <label for="email">Email</label>
          <div class="input-group">
            {{input type="text" class="form-control" value=this.model.email id="email" placeholder="Email" aria-label="Input group example" aria-describedby="btnGroupAddon"}}
          </div>
        </div>
        <div class="form-group">
          <label for="email">Password</label>
          <div class="input-group">
            {{input type="password" class="form-control" value=this.model.password id="password" placeholder="Password" aria-label="Input group example" aria-describedby="btnGroupAddon"}}
          </div>
        </div>
        <div class="form-group">
          <label for="email">First name</label>
          <div class="input-group">
            {{input type="text" class="form-control" value=this.model.firstname id="firstname" placeholder="" aria-label="Input group example" aria-describedby="btnGroupAddon"}}
          </div>
        </div>
        <div class="form-group">
          <label for="email">Last name</label>
          <div class="input-group">
            {{input type="text" class="form-control" value=this.model.lastname id="lastname" placeholder="" aria-label="Input group example" aria-describedby="btnGroupAddon"}}
          </div>
        </div>
        <div class="form-group">
          <button type="button" {{action "update" this.model}} class="btn btn-success btn-block">Update</button>
        </div>
      </form>
    </article>
  </div>
</div>