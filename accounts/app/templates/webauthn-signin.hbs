<div class="container">
  <div id="logo"><img id="logo_img" src="{{rootURL}}assets/lock.png" class="rounded mx-auto d-block" alt="Lock"></div>
  <div id="webauthn_signindiv" class="card">
    <div id="logo2"><img id="webauthn_key" src="{{rootURL}}assets/webauthn_key.svg" class="rounded mx-auto d-block" alt="FIDO2 USB Key"></div>
    <article class="card-body">
      <h6 class="card-title text-left mb-4 mt-1">Step 1 - Insert your FIDO2 then click Sign In</h6>
      <h6 class="card-title text-left mb-4 mt-1">Step 2 - Tap your FIDO2 key when prompted</h6>
      {{#if login_failed}}
        <h6 id="signinalertdiv" class="card-subtitle mb-2 text-danger">{{login_failure_reason}}</h6>
      {{/if}}
      <hr>
      <form>
        <div class="form-group">
          <button id="sigin_btn" type="button" {{action "authenticate" this.model}} class="btn btn-success btn-block">Sign In</button>
        </div>
      </form>
    </article>
  </div>
</div>